@model List<ShoesASP.Models.Brand>


<h1>Marcas</h1>

<!--Agrego una tabla-->
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m=>brand.Name)
                </td>
            </tr>
        }
    </tbody>
</table>


<!--DisplayFor es para darle formato.-->